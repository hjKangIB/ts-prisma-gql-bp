{
  "compilerOptions": {
    "target": "es6", // 어떤 버전으로 컴파일할지 작성
    "module": "commonjs", //어떤 모듈 방식으로 컴파일할지 설정
    "outDir": "dist", //컴파일 후 js 파일들이 생성되는 곳
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "strictNullChecks": true,
    "typeRoots": [
      // "./src/@types",
      "node_modules/@types",
      "src/generated"
    ] /* List of folders to include type definitions from. */,
    // "sourceMap": true,                     /* Generates corresponding '.map' file. */
    // "rootDir": ".", //루트 폴더
    // "strict": true, //strict 옵션 활성화
    // "moduleResolution":"node", //모듈 해석 방법 설정: 'node' (Node.js)
    // "lib": ["esnext"],
    "esModuleInterop": true, //esModuleInterop 속성이 true로 설정될 경우, ES6 모듈 사양을 준수하여 CommonJS 모듈을 가져올 수 있게 됩니다.
    // "jsx":"react"
    // "skipLibCheck": true /* Skip type checking of declaration files. */
    "resolveJsonModule": true
    // "noImplicitAny": true,                 /* Raise error on expressions and declarations with an implied 'any' type. */
    // "declaration": true, /* Auto generate xxx.d.ts files for each .ts files */
    // "declarationDir" : "./src/@types" /* Auto generate xxx.d.ts files for each .ts files */
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

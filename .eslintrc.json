{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "node": true
  },
  "rules":{
    "import/extensions": ["error", "never"],
    "import/no-unresolved": "error",
    "no-console": "off",
    "no-extra-boolean-cast": 1,
    "@typescript-eslint/restrict-plus-operands": 1,
    "@typescript-eslint/explicit-module-boundary-types": 1,
    "@typescript-eslint/no-explicit-any": 1,
    "@typescript-eslint/no-floating-promises": 1,
    "@typescript-eslint/no-unsafe-member-access": 1,
    "@typescript-eslint/no-unsafe-assignment": 1
  },
  // "baseUrl":"./src",
  "settings":{
    "import/resolver": { // eslint-plugin-import 의 경로 설정 옵션. 여기서 노드에서 사용되는 경로부분을 src 로 적어주면 절대경로를 인식하는 원리이다.
      "node": {
        "extensions": [".ts", ".tsx", "js","jsx"]
      },
      "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
    }
  },
  "plugins":["@typescript-eslint", "prettier"],
  "extends": [
    // 1. Airbnb style guide 적용
    "airbnb-base", // for javascript
    "airbnb-typescript/base", // for typescript
    // "airbnb-typescript", // for typescript react
    // 2. TypeScript ESLint recommanded style 적용
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:import/errors",
    "plugin:import/warnings"
  ]
}